{
  "name": "golinks-extension",
  "version": "1.0.0",
  "description": "Personal go-links system for quick navigation to your favorite URLs",
  "main": "background.js",
  "scripts": {
    "test": "jest tests/*.unit.test.js",
    "test:all": "jest",
    "test:unit": "jest tests/*.unit.test.js",
    "test:integration": "jest tests/*.test.js --testPathIgnorePatterns=unit.test.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "validate": "node validate.js",
    "lint": "eslint *.js tests/*.js",
    "lint:fix": "eslint *.js tests/*.js --fix",
    "format": "prettier --write *.js *.html *.css tests/*.js",
    "format:check": "prettier --check *.js *.html *.css tests/*.js",
    "build": "npm run validate && npm run lint && npm run test:unit",
    "build-with-tests": "npm run validate && npm run lint && npm run test:all",
    "pre-commit": "npm run format && npm run lint:fix && npm run validate && npm run test",
    "zip": "zip -r golinks-extension.zip . -x 'node_modules/*' 'tests/*' '*.git*' 'package*.json' '.eslintrc*' '.prettierrc*' 'jest.config.js'",
    "clean": "rm -rf node_modules coverage .nyc_output golinks-extension.zip"
  },
  "keywords": [
    "browser-extension",
    "chrome-extension",
    "safari-extension",
    "go-links",
    "navigation",
    "productivity"
  ],
  "author": "GoLinks Extension",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/jest": "^29.5.12",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5",
    "puppeteer": "^22.4.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/jest.setup.js"],
    "testMatch": ["<rootDir>/tests/**/*.test.js"],
    "collectCoverageFrom": [
      "*.js",
      "!validate.js",
      "!jest.config.js"
    ],
    "coverageReporters": ["text", "lcov", "html"],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true,
      "webextensions": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended",
      "prettier"
    ],
    "plugins": ["jest"],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "globals": {
      "chrome": "readonly",
      "browser": "readonly"
    },
    "rules": {
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
      "no-console": ["warn", { "allow": ["warn", "error"] }],
      "prefer-const": "error",
      "no-var": "error",
      "eqeqeq": "error",
      "no-eval": "error",
      "no-implied-eval": "error",
      "no-new-func": "error",
      "no-script-url": "error",
      "no-undef": "error"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 80,
    "bracketSpacing": true,
    "arrowParens": "avoid"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/user/golinks-extension.git"
  },
  "bugs": {
    "url": "https://github.com/user/golinks-extension/issues"
  },
  "homepage": "https://github.com/user/golinks-extension#readme"
}